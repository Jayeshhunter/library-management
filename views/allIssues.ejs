      function deleteItem(e) {
        var index1 = e.getAttribute("data-id");
        var name = e.getAttribute("data-name");
        try {
          const res = fetch("/allIssues", {
            method: "POST",
            body: JSON.stringify({ index: index1, Name: name }),
            headers: { "Content-Type": "application/json" },
          });
          //const data = res.json();

          location.assign("/");
          // changew this later to new page
