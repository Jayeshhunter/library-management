    <script>
      function searchFun() {
        let filter = document.getElementById("search").value.toUpperCase();
        let myTable = document.getElementById("myTable");
        let tr = myTable.getElementsByTagName("tr");
        for (var i = 0; i < tr.length; i++) {
          let td = tr[i].getElementsByTagName("td")[1];
          if (td) {
            let textVal = td.textContent || td.innerHTML;
            if (textVal.toUpperCase().indexOf(filter) > -1) {
              tr[i].style.display = "";
            } else {
              tr[i].style.display = "none";
            }
          }
        }
      }
      var s = "";
      var arr = [];
      function addItem(e) {
        console.log(e.getElementsByTagName("td")[0].textContent);
        var obj = {
          id: e.getElementsByTagName("td")[0].textContent,
          bookName: e.getElementsByTagName("td")[1].textContent,
          author: e.getElementsByTagName("td")[2].textContent,
          genre: e.getElementsByTagName("td")[3].textContent,
          //   forth: e.getElementsByTagName("td")[4].textContent,
        };
        arr.push(obj);
        printData();
      }
      function printData() {
        arr.map((x, index) => {
          s =
            s +
            `<div class="card" style="display: flex;flex-direction:row;justify-content: space-evenly;">
                    <div class="card-body">
                      ${x.id}
                    </div>
                    <div class="card-body">
                        ${x.bookName}
                      </div>
                      <div class="card-body">
                        ${x.author}
                      </div>
                      <div class="card-body">
                        ${x.genre}
                      </div>
                      <button type="button" id=` +
            index +
            ` class="btn btn-primary" onclick = "deleteItem(this)" >delete</button>
             
                  </div>
                  <br/>`;
        });

        console.log(s);
        document.getElementById("addVal").innerHTML = s;
        s = " ";
      }
      function deleteItem(e) {
        delete arr[e.id];
        printData();
      }
      function subEver() {
        let Name = document.getElementById("Name").value;
        let Email = document.getElementById("Email").value;
        let newObj = {
          Name,
          Email,
          books: arr,
        };
        try {
          const res = fetch("/", {
            method: "POST",
            body: JSON.stringify(newObj),
            headers: { "Content-Type": "application/json" },
          });
          //const data = res.json();

          location.assign("/");
          // changew this later to new page
        } catch (err) {
          console.log(err);
        }
      }
